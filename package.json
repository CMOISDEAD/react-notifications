{
  "name": "doom-react-notifications",
  "version": "0.1.1",
  "description": "A simple react notification system",
  "license": "MIT",
  "author": "camilodavila",
  "keywords": [
    "react",
    "notification",
    "javascript"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/react-notifier.umd.js",
  "module": "./dist/react-notifier.es.js",
  "exports": {
    ".": {
      "import": "./dist/react-notifier.es.js",
      "require": "./dist/react-notifier.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/react": "^14.0.0",
    "@vitejs/plugin-react": "^4.0.1",
    "c8": "^8.0.0",
    "eslint": "^8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "jsdom": "^22.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "vite": "^4.3.9",
    "vitest": "^0.32.2"
  }
}
